.image-container
  col(1/3, offset: 1/10)
  padding-top: 20px
  position: relative

  @media main-bp
    center()

  img.phone
    center()
    width: 100%

    @media main-bp
      width: 70%

  .inner-container
    absolute: top 10px
    width: 100%

    @media main-bp
      width: 70%
      left: 15%

    img.inner-photo
      absolute: top 10px
      width: 100%

  .inner
    display: none
    absolute: top 22px
    width: 100%

    @media main-bp
      width: 70%
      left: 15%

    .slidesjs-navigation
      position: absolute
      top: 50%
      width: 5%

      @media main-bp
        display: none

      &.slidesjs-next
        left: 105%

      &.slidesjs-previous
        right: 105%

      img
        width: 100%

