#landing
  background-color: #e2cbff
  height: 900px

  .content-container
    padding-top: 4em

    @media main-bp
      padding-top: 2em

  .logo
    col(1/4)

    @media main-bp
      center(200px)

    img
      width: 100%

  .landing-copy
    col(6/10)
    float: right
    color: white

    
    @media main-bp
      width: 100%
      text-align: center
      padding-top: 0

    h3
      font-size: 1.5em
      color: white

      @media only screen and (max-width: 900px)
        fs: 1.25em

      @media only screen and (max-width: 750px)
        fs: .9em


      @media main-bp
        width: 100%
        font-size: 1.2em

    .sign-up
      label
        @media main-bp
          text-align: center
      input
        @media main-bp
          center(50%)

  .btn-container
    display: block

    @media main-bp
      display: none

    img
      width: 30%
